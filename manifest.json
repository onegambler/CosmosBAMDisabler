{
    "manifest_version": 2,

    "name": "Cosmos BAM Disabler",
    "description": "Disable cosmos Deploy to live buttons",
    "version": "0.1",
    "permissions": [
        "tabs",
        "storage",
        "https://admin.live.bbc.co.uk/cosmos/component/*"
    ],
    "browser_action": {
        "name": "Click to change configuration",
        "default_icon": "images/icon.png",
        "default_popup": "src/popup/popup.html"
    },
    "options_page": "src/options2/options.html",
    "background": {
        "persistent": false,
        "scripts": ["src/background/background.js"]
    },
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [{
        "matches": ["https://admin.live.bbc.co.uk/cosmos/component/*"],
        "js": ["src/content/content.js"],
        "run_at": "document_end"
  }]
}